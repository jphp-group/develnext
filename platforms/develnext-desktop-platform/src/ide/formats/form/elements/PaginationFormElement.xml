<element extends="NodeFormElement">
    <properties>
        <property code="selectedPage" name="Выделенная страница" editor="integer" />
        <property code="total" name="Количество элементов" editor="integer" tooltip="Общее количество элементов" />
        <property code="pageSize" name="Размер страницы" editor="integer" tooltip="Количество элементов на одной странице" />
        <property code="maxPageCount" name="Максимум страниц" editor="integer" tooltip="Максимальное отображаемое количество страниц" />
        <property code="hintText" name="Текст-подсказка" editor="text" />
        <property code="showPrevNext" name="Пред. + след." editor="boolean" />
        <property code="showTotal" name="Показывать количество" editor="boolean" tooltip="Показывать рядом количество всех элементов" />
        <property code="alignment" name="Выравнивание" editor="position" />
        <property code="font" name="Шрифт" editor="font" />
        <property code="textColor" name="Цвет текста" editor="color" />
        <property code="hgap" name="Отступы (гор.)" editor="integer" tooltip="Отступы по-горизонтали" />
        <property code="vgap" name="Отступы (вер.)" editor="integer" tooltip="Отступы по вертикали" />
    </properties>

    <eventTypes>
        <eventType code="action" name="Действие" kind="ActionEvent" icon="icons/ok16.png" />
    </eventTypes>
</element>