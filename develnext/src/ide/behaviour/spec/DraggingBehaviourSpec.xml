<behaviour extends="BehaviourSpec">
    <properties>
        <property name="Направление" code="direction" editor="enum">
            <variants>
                <variant value="ALL">Все</variant>
                <variant value="LEFT_RIGHT">Лево + Право</variant>
                <variant value="UP_DOWN">Верх + Низ</variant>
            </variants>
        </property>
        <property name="Сетка X" code="gridX" editor="integer" tooltip="Выравнивание по сетке X (гориз.)" />
        <property name="Сетка Y" code="gridY" editor="integer" tooltip="Выравнивание по сетке Y (вертик.)" />
        <property name="Ограничить" code="limitedByParent" editor="boolean" tooltip="Ограничить перемещение - только в рамках панели, где находится объект" />
        <property name="Полупрозрачность" code="opacityEnabled" editor="boolean" tooltip="При перемещении делать объект полупрозрачным" />
        <property name="Уровень прозрачности" code="opacity" editor="float" tooltip="Уровень прозрачности объекта при ее перемещении" />
        <property name="Анимировать" code="animated" editor="boolean" tooltip="Анимировать изменение уровня прозрачности объекта" />
    </properties>
</behaviour>